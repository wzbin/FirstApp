<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bianpinghuaqiqiuzhuangshibeijing_3215529"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

<ListView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/list"
    android:layout_above="@+id/enter"


    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="false"></ListView>



    <EditText
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:hint="Enter here"
        android:background="@drawable/sss"
        android:id="@+id/enter"
        android:layout_toLeftOf="@+id/send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/send"
        android:background="@drawable/bb"

        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/enter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
